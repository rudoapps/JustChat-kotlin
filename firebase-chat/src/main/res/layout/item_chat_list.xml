<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="chat"
            type="es.rudo.firebasechat.domain.models.Chat" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <!-- TODO: Make user pic shape customizable -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_user"
            android:layout_width="@dimen/user_picture_size"
            android:layout_height="@dimen/user_picture_size"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginStart="@dimen/margin_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_regular"
            android:layout_marginTop="@dimen/margin_mini_small"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@{chat.name}"
            android:textColor="@color/soft_black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_user"
            app:layout_constraintTop_toTopOf="@id/image_user"
            tools:text="@tools:sample/lorem[3]" />

        <TextView
            android:id="@+id/text_last_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_mini_small"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@{chat.lastMessage}"
            android:textColor="@color/soft_black"
            app:layout_constraintBottom_toBottomOf="@id/image_user"
            app:layout_constraintEnd_toEndOf="@id/text_title"
            app:layout_constraintStart_toStartOf="@id/text_title"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:layout_constraintVertical_bias="1"
            tools:text="@tools:sample/lorem[10]" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:alpha="0.25"
            android:background="@color/soft_black"
            app:layout_constraintTop_toBottomOf="@id/image_user" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>