<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:drawable="@drawable/ic_chat_bubble_leg_left"
        android:gravity="bottom|start"
        android:right="10dp" />

    <item
        android:gravity="center"
        android:left="10dp">

        <shape
            android:width="80dp"
            android:height="80dp"
            android:shape="rectangle">

            <corners
                android:bottomRightRadius="@dimen/chat_bubble_corner_wide"
                android:topLeftRadius="@dimen/chat_bubble_corner_wide"
                android:topRightRadius="@dimen/chat_bubble_corner_wide" />

            <solid android:color="@color/in_message" />
        </shape>
    </item>
</layer-list>